<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Previous points</th>
    <th>Indoor games points</th>
    <th>Outdoor games points</th>
    <th>Friend points</th>
    <th>Spirit points</th>
    <th>Deductions</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%=h team.name %></td>
    <td><%=h team.previous_points %></td>
    <td><%=h team.indoor_games_points %></td>
    <td><%=h team.outdoor_games_points %></td>
    <td><%=h team.friend_points %></td>
    <td><%=h team.spirit_points %></td>
    <td><%=h team.deductions %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New team', new_team_path %>